<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] Statify</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
    </header>
    <div class="side-nav">
        <ul class="mt-5">
             
            <li class="my-3">
                <a asp-area="" asp-controller="Home" asp-action="Index">
                    <img class="ml-4 mr-3 align-bottom" src="~/assets/home_white_24dp.svg" />
                    Landing Page
                </a>
            </li>
            <li class="my-3">
                <a asp-area="" asp-controller="Players" asp-action="Index">
                    <img class="ml-4 mr-3" src="~/assets/people_white_24dp.svg" />
                    Manage Players
                </a>
            </li>
            <li class="my-3">
                <a asp-area="" asp-controller="Games" asp-action="Index">
                    <img class="ml-4 mr-3" src="~/assets/event_white_24dp.svg" />
                    Manage Games
                </a>
            </li>
        </ul>
    </div>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer text-muted">
        <div class="container">
            &copy; 2021 - Statify - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
