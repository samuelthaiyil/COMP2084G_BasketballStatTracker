<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] Statify</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
    </header>
    <!--Side bar nav - contains an unordered list the each list item containing a link to a page-->
    <div class="side-nav">
        <div class="position-absolute" style="margin-left: 4vw; margin-top: 4vh;">
            <!--Header/Logo-->
            <h2 class="text-white">
                Statify
                <img src="~/assets/sports_basketball_white_24dp.svg" />
            </h2>
        </div>
        <ul style="margin-top: 20vh;">
            <li class="my-3">
                <a asp-area="" asp-controller="Home" asp-action="Index">
                    <img class="ml-4 mr-3 align-bottom" src="~/assets/home_white_24dp.svg" />
                    Home
                </a>
            </li>
            <li class="my-3">
                <a asp-area="" asp-controller="Players" asp-action="Index">
                    <img class="ml-4 mr-3" src="~/assets/people_white_24dp.svg" />
                    Manage Players
                </a>
            </li>
            <li class="my-3">
                <a asp-area="" asp-controller="Games" asp-action="Index">
                    <img class="ml-4 mr-3" src="~/assets/event_white_24dp.svg" />
                    Manage Games
                </a>
            </li>
            <li class="my-3">
                <a asp-area="" asp-controller="GameDetails" asp-action="Index">
                    <img class="ml-4 mr-3" src="~/assets/event_white_24dp.svg" />
                    Manage Player Stats
                </a>
            </li>
        </ul>
    </div>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer text-muted">
        <div class="container">Samuel Thaiyil 1133591 COMP2084G <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
