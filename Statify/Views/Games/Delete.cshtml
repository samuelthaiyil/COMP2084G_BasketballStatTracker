@model StatTracker.Models.Game

@{
    ViewData["Title"] = "Manage Games | ";
}

<h1>Delete Game</h1>

<div>
    <h4>Game</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
           Game Location
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.GameLocation)
        </dd>
        <dt class = "col-sm-2">
            Game Date
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.GameDate)
        </dd>
        <dt class = "col-sm-2">
           Game Type
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.GameType)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="GameId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a class="text-dark" asp-action="Index">Back to List</a>
    </form>
</div>
