@model IEnumerable<StatTracker.Models.Player>

@{
    ViewData["Title"] = "Manage Players | ";
}

 
<div class="d-flex flex-row my-5">
    <h1 class="text-dark mr-4">Manage Players</h1>
    <a class="text-dark align-self-center" asp-action="Create">
        Create New
        <img class="mr-2 align-bottom" src="~/assets/add_black_24dp.svg" />
    </a>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Position)
            </th>
            <th>
                Player Name
            </th>
            <th>
                Player Height (cm)
            </th>
            <th>
                Date Of Best Performing Game
            </th>
            <th>
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Position)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PlayerName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PlayerHeightCm)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Game.GameDate)
            </td>
            <td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.PlayerId"><img src="~/assets/edit_black_24dp.svg" /></a> |
                <a asp-action="Details" asp-route-id="@item.PlayerId"><img src="~/assets/info_black_24dp.svg" /></a> |
                <a asp-action="Delete" asp-route-id="@item.PlayerId"><img src="~/assets/delete_black_24dp.svg" />Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
