@model StatTracker.Models.Player

@{
    ViewData["Title"] = "Manage Players | ";
}

<h1 class="mt-5">Player Details</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Position)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Position)
        </dd>
        <dt class="col-sm-2">
            Player Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PlayerName)
        </dd>
        <dt class="col-sm-2">
            Player Height
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PlayerHeightCm) cm
        </dd>
    </dl>
</div>
<div>
    <a class="text-dark" asp-action="Edit" asp-route-id="@Model.PlayerId">Edit</a> |
    <a class="text-dark" asp-action="Index">Back to List</a>
</div>
